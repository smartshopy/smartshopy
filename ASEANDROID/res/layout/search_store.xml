        android:background="#ffffff"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/searchstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="60dp"
